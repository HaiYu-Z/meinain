<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.dao.OrderSettingDao">

    <insert id="add" parameterType="com.atguigu.pojo.OrderSetting">
        insert into t_ordersetting(orderdate, number) values(#{orderDate},#{number})
    </insert>
    <update id="updateForOrderDate" parameterType="com.atguigu.pojo.OrderSetting">
        update t_ordersetting set number=#{number} where orderDate=#{orderDate}
    </update>

    <select id="findOrderSettingByOrderDate" resultType="java.lang.Integer">
        select count(orderDate) from t_ordersetting where orderDate=#{orderDate}
    </select>
</mapper>